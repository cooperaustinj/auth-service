<div class="row">
    <div class="col">
        <h1>ACME Corp. Website</h1>
        <% if(user) { %>
            <div class="mt-4">Logged in as: <%= user.email %></div>
            <div class="mt-3">
                <a href="/logout" class="btn btn-secondary">Logout</a>
            </div>
        <% } else { %>
        <div class="mb-3">
            <a href="http://localhost:3000/register?aid=1&r=http://localhost:3009" class="btn btn-info">Register</a>
        </div>
        <div>
            <a href="http://localhost:3000/login?aid=1&r=http://localhost:3009/login-callback" class="btn btn-primary">Login</a>
        </div>
        <% } %>
    </div>
</div>
